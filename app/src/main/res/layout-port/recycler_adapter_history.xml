<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_history"
    android:background="@drawable/slct_list">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="@dimen/view_padding_medium"
        android:text="VINWIL"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_primary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/tv_created_at"
        android:layout_toLeftOf="@+id/tv_created_at"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="@dimen/view_padding_medium"
        android:paddingLeft="@dimen/view_padding_medium"
        android:paddingEnd="@dimen/view_padding_small"
        android:paddingRight="@dimen/view_padding_small"
        android:paddingBottom="@dimen/view_padding_medium"
        android:text="Vinwil"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black_secondary_text"
        android:textSize="@dimen/text_secondary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_name"
        android:textColor="@color/black_secondary_text"
        android:textSize="@dimen/text_secondary"
        android:id="@+id/tv_created_at"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="@dimen/view_padding_medium"
        android:paddingStart="@dimen/view_padding_medium"
        android:paddingEnd="@dimen/view_padding_small"
        android:paddingRight="@dimen/view_padding_small"
        android:paddingBottom="@dimen/view_padding_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:layout_below="@+id/tv_description"
        android:background="@color/black_divider"/>

</RelativeLayout>