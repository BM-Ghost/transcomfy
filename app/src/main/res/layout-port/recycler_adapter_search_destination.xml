<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_search_destination"
    android:background="@drawable/slct_list">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_primary"
        android:textColor="@color/black_text"
        android:id="@+id/tv_name"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/view_padding_medium"
        android:paddingLeft="@dimen/view_padding_medium"
        android:paddingEnd="@dimen/view_padding_medium"
        android:paddingRight="@dimen/view_padding_medium"
        android:paddingTop="@dimen/view_padding_extra_large"
        android:paddingBottom="@dimen/view_padding_large"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:layout_below="@id/tv_name"
        android:background="@color/black_divider"/>

</RelativeLayout>